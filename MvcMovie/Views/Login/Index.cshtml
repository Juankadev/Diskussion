@using Diskussion.Models.ViewModels
@model LoginViewModel
@{
    ViewData["Title"] = "Ingresar";
}
<h1 class="is-size-2">Ingresar</h1>

<form asp-action="Verify">
    <div class="field">
        <label for="Name" class="label">Nombre de usuario</label>
        <div class="control">
            <input asp-for="Name" id="Name" name="Name" class="input" type="text">
            <span asp-validation-for="Name" class="has-text-danger"></span>
        </div>
    </div>

    <div class="field">
        <label for="Password" class="label">Contraseña</label>
        <div class="control">
            <input asp-for="Password" id="Password" name="Password" class="input" type="password">
            <span asp-validation-for="Password" class="has-text-danger"></span>
        </div>
    </div>

    <div class="field is-grouped">
        <div class="control">
            <button type="submit" class="button is-link">Ingresar</button>
        </div>
    </div>
</form>
