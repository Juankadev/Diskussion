@model User
@{
    ViewData["Title"] = "Editar Perfil";
}

<h1 class="is-size-2">Editar perfil</h1>
<br />

<form asp-action="Edit">
    <input type="hidden" asp-for="Id"/>

    <div class="field">
        <label asp-for="Name" class="label">Nombre de Usuario</label>
        <div class="control">
            <input asp-for="Name" id="Name" name="Name" class="input" type="text">
            <span asp-validation-for="Name" class="has-text-danger"></span>
        </div>
    </div>

    <div class="field">
        <label for="Email" class="label">Email</label>
        <div class="control">
            <input asp-for="Email" id="Email" name="Email" class="input" type="email">
            <span asp-validation-for="Email" class="has-text-danger"></span>
        </div>
    </div>

    <div class="field">
        <label for="Password" class="label">Contraseña</label>
        <div class="control">
            <input asp-for="Password" id="Password" name="Password" class="input" type="password">
            <span asp-validation-for="Password" class="has-text-danger"></span>
        </div>
    </div>

    <div class="field is-grouped">
        <div class="control">
            <button type="submit" class="button is-primary">Guardar</button>
        </div>
    </div>
</form>





