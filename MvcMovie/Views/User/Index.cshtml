@model List<User>
@{
    ViewData["Title"] = "Usuarios";
}

<h1 class="is-size-2">Administración de Usuarios</h1>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Email</th>
            <th>Fecha de Registro</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@user.RegistrationDate</td>
                <td>@user.State</td>
                <td><a asp-action="Delete" asp-route-id="@user.Id">Dar de baja</a></td>
            </tr>
        }
    </tbody>
</table>