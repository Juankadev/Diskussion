@model List<Discussion>
@{
    ViewData["Title"] = "Discusiones";
}

<h1 class="is-size-2">Discusiones</h1>

<div class="control">
    <a class="button is-primary" asp-action="Create">Nueva Discusion</a>
</div>

<table class="table is-hoverable is-striped">
    <thead>
        <tr>
            <th>Titulo</th>
            <th>Descripcion</th>
            <th>Autor</th>
            <th>Fecha de Creacion</th>
        </tr>
    </thead>
    <tbody>
        <span><b>@Model.ToArray().Length </b> Discusiones</span>

        @foreach (var discussion in Model)
        {
            <tr>
                <td>@discussion.Title</td>
                <td>@discussion.Description</td>
                <td>@Html.DisplayFor(d=>discussion.Author.Name)</td>
                <td>@discussion.CreationDate</td>
                <td><a class="button is-info" asp-action="Discussion" asp-route-id=@discussion.Id>Abrir</a></td>
            </tr>
        }
    </tbody>
</table>

<div style="margin-bottom:15rem"></div>